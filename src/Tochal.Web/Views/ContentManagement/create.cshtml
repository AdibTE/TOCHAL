                    @foreach (var item in Enum.GetValues(typeof(ShowlocationTypeSSOT)))
                    {
                        <option value="@(item)">@(((ShowlocationTypeSSOT)item).GetDisplayName())</option>
                    }
                </select>*@
            @*</div>
